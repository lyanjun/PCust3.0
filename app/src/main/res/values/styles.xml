<resources>

    <!-- 界面风格 -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- <item name="colorPrimary">@color/colorPrimary</item>
         <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
         <item name="colorAccent">@color/colorAccent</item>-->
        <item name="android:windowBackground">@color/windowBackgroundColor</item>
    </style>
    <!-- 手势返回界面设置为背景透明 -->
    <style name="AppSwipeBackTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>
    <!-- 登录输入框样式 -->
    <style name="LoginInputStyle">
        <item name="android:layout_width">@dimen/dp_0</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_14</item>
        <item name="android:lines">1</item>
        <item name="android:background">@drawable/pcust_login_input_background</item>
        <item name="x_clearDrawable">@drawable/pcust_input_clear_icon</item>
    </style>
    <!-- 输入框右侧占位（为了防止嵌套布局） -->
    <style name="LoginInputRightPlaceStyle">
        <item name="android:layout_width">@dimen/dp_10</item>
        <item name="android:layout_height">@dimen/dp_43</item>
        <item name="android:background">@color/white</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>
    <!-- 输入框左侧占位（为了防止嵌套布局） -->
    <style name="LoginInputLeftPlaceStyle">
        <item name="android:background">@color/white</item>
        <item name="android:layout_width">@dimen/dp_50</item>
        <item name="android:layout_height">@dimen/dp_43</item>
        <item name="android:scaleType">centerInside</item>
    </style>
    <!-- 红色字体自适应宽高，文字大小14sp -->
    <style name="RedWrap14SpText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/sp_14</item>
    </style>
    <!-- 单行输入文本域的样式 -->
    <style name="SingleLineInputItemStyleNoPadding">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/dp_10</item>
        <item name="android:background">@color/white</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="SingleLineInputItemStyle" parent="SingleLineInputItemStyleNoPadding">
        <item name="android:padding">@dimen/dp_8</item>
    </style>
    <!-- 带有删除功能的输入框 -->
    <style name="InputWithDeleteStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_16</item>
        <item name="android:background">@null</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:lines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_marginLeft">@dimen/dp_6</item>
    </style>
    <!-- 用户工作信息文本的风格 -->
    <style name="UserWorkInfoTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/sp_12</item>
        <item name="android:layout_marginLeft">@dimen/dp_40</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
