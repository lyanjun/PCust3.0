<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp_5"
    android:layout_height="@dimen/dp_50"
    android:id="@+id/itemChild"
    android:background="@drawable/item_white_bg_selector">
    <!-- 图标 -->
    <ImageView
        android:id="@+id/classIcon"
        android:layout_width="@dimen/dp_30"
        android:layout_height="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:src="@drawable/label_icon"
        tools:ignore="RtlHardcoded" />
    <!-- 标题提示文字 -->
    <TextView
        android:id="@+id/classHint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_16"
        android:textColor="@color/black"
        tools:text="提示文字"
        android:layout_marginLeft="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@id/classIcon"
        tools:ignore="RtlHardcoded" />
    <!-- 右箭头 -->
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:src="@drawable/item_right_icon"
        android:layout_marginRight="@dimen/dp_5"
        tools:ignore="RtlHardcoded" />
</android.support.constraint.ConstraintLayout>