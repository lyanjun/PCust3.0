<?xml version="1.0" encoding="utf-8"?>
<com.c3.pcust30.weight.view.BottomBar xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/bottomBar"
    android:layout_width="@dimen/dp_0"
    android:layout_height="@dimen/dp_50"
    android:background="@drawable/pcust_bottom_bar_background"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintTop_toBottomOf="@id/mainHome"
    app:layout_constraintBottom_toBottomOf="parent"
    tools:showIn="@layout/activity_main">
    <Button
        android:id="@+id/f1"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@color/red"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="测试"
        app:layout_constraintRight_toLeftOf="@+id/f2"/>
    <Button
        android:id="@+id/f2"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@color/green"
        app:layout_constraintLeft_toRightOf="@+id/f1"
        app:layout_constraintRight_toLeftOf="@+id/f3"/>
    <Button
        android:id="@+id/f3"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@color/yellow"
        app:layout_constraintLeft_toRightOf="@+id/f2"
        app:layout_constraintRight_toLeftOf="@+id/f4"/>
    <Button
        android:id="@+id/f4"
        android:layout_width="@dimen/dp_50"
        android:layout_height="@dimen/dp_50"
        android:background="@color/cyan"
        app:layout_constraintLeft_toRightOf="@id/f3"
        app:layout_constraintRight_toRightOf="parent"/>
</com.c3.pcust30.weight.view.BottomBar>